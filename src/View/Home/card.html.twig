<div class="card">
  
      <!--Card image-->
      <div class="view viewTop">
         <a href="/home/article/{{article.id}}"> 
          <img class="img w-100 imgcard" src="/assets/images/{{article.image_id}}" alt="">
         </a>
      </div>

      <!--Card content-->
      <div class="card-body ">
        <a href="/home/article/{{article.id}}">
          <h4 class="card-title titleTop">{{article.title}}</h4>
          <!--Text-->
          <p class="card-text textTop">{{article.content}}</p>
        </a>
      </div>

</div>