{% extends 'adminLayout.html.twig' %}
{% block javascript %}
    <script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=w5r8f7bjk1wzj1l99fkqvxpv74xcpg35e0wqwzj2fu99magk"></script>
    <script>  tinymce.init({selector: '#content',}); </script>
{% endblock %}
{% block content %}
<div class="container">
	<a href="index"> Retour Ã  la liste des articles</a>
	<form action="" method="POST">
		<input id="id" name="id" type="hidden" value="{{values.id}}">
		<div class="row justify-content-center">
			<div class="form-row col-4">
			    <div class="form-group">
			      	<label for="inputText">Name article</label>
			      	<input type="text" class="form-control" name="title" id="title" value="{{ values.title }}" required>
					<label class="form-check-label">{{ errors.title }}</label>
			    </div>
			</div>	
			<div class="form-row col-4">
			    <div class="form-group">
			      <label for="inputText">Date</label>
			      <input type="date" class="form-control" name="date" id="date" value="{{ values.date }}" required>
			      <label class="form-check-label">{{ errors.date }}</label>
			    </div>
			</div>
	  	</div>
		<div class="row justify-content-center">
			<div class="form-row col-4">
			    <div class="form-group">
			      <label for="inputText">Author</label>
			      <input type="text" class="form-control" name="author" id="author" value="{{ values.author }}" required>
			      <label class="form-check-label">{{ errors.author }}</label>
			    </div>
			</div>
			<div class="form-row col-4">
			{# Todo: foreach #}
				<label for="inputText">Category</label>
				<select name="category" id="category" class="custom-select col-11" required>
					{% for category in categories %}
					 <option value="{{category.id}}" {% if category.id == values.category %} selected {% endif %}>{{category.name}}</option>
    			{% endfor %}
				</select>
				<label class="form-check-label">{{ errors.category }}</label> 
			</div>	   
		</div>
		<div class="row justify-content-center">
			<div class="form-row col-4">
			    <div class="form-group">
			      <label for="inputText">Short text</label>
			      <input type="text" class="form-control" name="shortText" id="shortText" value="{{ values.shortText }}"required>
			      <label class="form-check-label">{{ errors.shortText }}</label>
			    </div>
			</div>
			<div class="form-row col-4">
		    	<div class="form-group col-5">
		      		<label for="inputText">Tags</label>
		      		<input type="text" class="form-control" name="tag" id="tag" value="{{ values.tag }}" required>
		      		<label class="form-check-label">{{ errors.tag }}</label>
		    	</div>				
	    	</div>			
		</div>	
		<div class="row justify-content-center">
			<div class="col-8">
			    <label for="content">Long text</label>
			    <textarea class="form-control" id="content" name="content" placeholder="article description">{{ values.content }}</textarea>
			</div>    
		</div>			
		<div class="row justify-content-center">
		    <div class="custom-file col-4">
				<input type="file" class="custom-file-input" name="upload" id="upload">
				<label class="custom-file-label col-6" for="customFile">Upload image</label>
				<label class="form-check-label">{{ errors.upload }}</label>
			</div>
			<div class="form-group col-4">
	    		<div class="form-check">
			        <input class="form-check-input" type="checkbox" value="" name="topArt" id="topArt">
			        <label class="form-check-label" for="invalidCheck2">Top article</label>
	    		</div>
	  		</div>
		</div>	
		<div class="row justify-content-center">
				<button type="submit" class="btn btn-dark btn-sm">Submit</button>
	  	</div>		
	</form>
</div>
{% endblock %}