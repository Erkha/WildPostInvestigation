{% extends 'layout.html.twig' %}

{% block content %}
	<form>
		<div class="form-row">
		    <div class="form-group">
		      <label for="inputText">Nom article</label>
		      <input type="text" class="form-control" name="article" id="article">
		    </div>
		</div>	
		<div class="form-row">
		    <div class="form-group">
		      <label for="inputText">Date</label>
		      <input type="date" class="form-control" name="date" id="date">
		    </div>
		</div>	
		<div class="form-group">
    		<div class="form-check">
		        <input class="form-check-input" type="checkbox" value="" name="bigArt" id="bigArt" required>
		        <label class="form-check-label" for="invalidCheck2">Big article</label>
    		</div>
  		</div>
		<div class="form-row">
			{# Todo: foreach #}
			<select class="custom-select custom-select-sm">
				 <option selected>Category</option>
				 <option value="1">Sport</option>
				 <option value="2">Politique</option>
				 <option value="3">Autres</option>
			</select> 
		</div>	   
		<div class="form-row">
		    <div class="form-group">
		      <label for="inputText">Author</label>
		      <input type="text" class="form-control" name="author" id="author">
		    </div>
		</div>	
		<div class="form-row">
		    <div class="form-group">
		      <label for="inputText">Short text</label>
		      <input type="text" class="form-control" name="shortText" id="shortText">
		    </div>
		</div>	
		<div class="form-row">
		    <div class="form-group">
		      <label for="inputText">Long text</label>
		      <input type="textarea" class="form-control" name="longText" id="longText">
		    </div>
		</div>	
		<div class="form-row">
		    <div class="form-group">
		      <label for="inputText">Tags</label>
		      <input type="text" class="form-control" name="Tags" id="tag">
		    </div>				

{% endblock %}
