{% extends 'adminLayout.html.twig' %}

{% block content %}

	<h2 class="author mt-2" style = "font-family:URW Chancery L, cursive !important">Liste des articles</h2>

  <a href="/adminArticle/add"><button class="btn btn-dark">Nouvel article</button></a>

  
	<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Article</th>
      <th scope="col">Date</th>
      <th scope="col">Catégorie</th>
      <th scope="col">Auteur</th>
      <th scope="col">Publié</th>
      <th scope="col">Top</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  	{% for article in articles %}
      <tr>
        <td>{{article.title|slice(0,50)}}</td>
        <td>{{article.articleDate}}</td>
        <td>{{article.catName}}</td>
        <td>{{article.firstname|capitalize}} {{article.lastname|capitalize}}</td>
        <td>{% if article.published == true %} <i class="far fa-check-circle" style="color:green"></i> {% endif %}</td>
        <td>{% if article.topArt == true %} <i class="fas fa-star" style="color:red"></i> {% endif %}</td>
        <th  scope="row"><a href="/adminArticle/update/{{article.id}}"><i class="fas fa-edit" title="Modifier l'article"></i></a> 
            <a href="/adminArticle/delete/{{article.id}}"><i class="fas fa-trash-alt" title="Supprimer l'article"></i></a>
        </th>
      </tr>
    {% endfor %}
  </tbody>
</table>
<div class="d-flex justify-content-center pb-3"> <span> page <a href="/adminArticle/index/1">1</a>
	{% for page in 2 .. pages %}
    , <a href="/adminArticle/index/{{page}}"> {{page}} </a>
  {% endfor %}
</span></div>
{% endblock %}