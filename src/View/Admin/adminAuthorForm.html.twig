<!DOCTYPE html>
<html lang="en">

<head>
  {# <link rel="icon" href="/assets/images/favicon.png"> #}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
 
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
  <!-- Bootstrap core CSS -->
  <link href="/assets/mdbootstrap/css/bootstrap.min.css" rel="stylesheet">
  <!-- Material Design Bootstrap -->
  <link href="/assets/mdbootstrap/css/mdb.min.css" rel="stylesheet">
  <!-- Your custom styles (optional) -->
   <link rel="stylesheet" href="/assets/css/style.css"> 
   <link rel="stylesheet" href="/assets/css/adminStyle.css">

   <link href="https://fonts.googleapis.com/css?family=UnifrakturMaguntia" rel="stylesheet"> 
   <!-- {% block stylesheet %}{% endblock %} -->
   <h1>Wild Post Investigation</h1>
</head>

{% block javascript %}
    <script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=w5r8f7bjk1wzj1l99fkqvxpv74xcpg35e0wqwzj2fu99magk"></script>
    <script>  tinymce.init({	entity_encoding : "raw", encoding: "UTF-8",
    													selector: '#content',}); 
	</script>
{% endblock %}
{% block content %}

<div class="container" style = "background : #d4e6f1">
	<h2 class="author">{{title2}}</h2>
	<form action="" method="POST">
		<input id="id" name="id" type="hidden" value="{{values.id}}">
		<div class="row justify-content-center">
			<div class="form-row col-4">
			    <div class="form-group">
			      	<label for="inputText">Nom</label>
			      	<input type="text" class="form-control" name="lastname" id="lastname" value="{{ values.lastname }}" >
					<label class="form-check-label">
						<span style = "color : red " >{{errors.lastname}}</span>
					</label>
			    </div>
			</div>	
			<div class="form-row col-4">
			    <div class="form-group">
			    	<label for="inputText">Prénom</label>
			    	<input type="text" class="form-control" name="firstname" id="firstname" value="{{ values.firstname }}" >
					<label class="form-check-label">
						<span style = "color : red" >{{errors.firstname}} </span>
					</label>
			    </div>
			</div>
	  	</div>
		<div class="row justify-content-center">
			
			<div class="form-row col-4">
			    <div class="form-group">
					{% if session.doujeviensAuthor=="createAuthor" %}
					<i class="fas fa-user"></i>
					<label for="inputText">Nom d'Utilisateur</label>
					
					<input type="text" class="form-control" name="username" id="username" value="{{ values.username }}" required>
					<label class="form-check-label">
						<span style = "color : red" > {{errors.username}}</span>
					</label>
					{% endif %}
			    </div>
			</div>
			<div class="form-row col-4">
				<div class="form-group">
					{% if session.doujeviensAuthor=="createAuthor" %}
						<i class="fas fa-key"></i>
						<label for="inputText">Mot de Passe</label>
						
						<input type="password" class="form-control" name="password" id="password" required>
						<label class="form-check-label" >
							<span style = "color : red"> {{errors.password}}</span>
						</label>
					{% endif %}
				</div>
			</div>
			  
		</div>
		<div class="row justify-content-center">
			<div class="form-row col-4">
				<div class="form-group">
					<div class="form-check col-4"><!-- validated  -->
					{% if session.doujeviensAuthor!="createAuthor" %}
						<input class="form-check-input " type="checkbox"  {% if values.valid == true %} checked="checked" {% endif %} name="valid" id="valid">
						<label class="form-check-label" for="valid">validé</label>
					{% endif %}
					</div>
				</div>
			</div>	
			<div class="form-row col-4">
				<div class="form-group">
					{% if session.doujeviensAuthor=="createAuthor" %}
						<i class="fas fa-key"></i>
						<label for="inputText">Confirmation Mot de Passe</label>
						
						<input type="password" class="form-control" name="confpassword" id="confpassword" required>
						<label class="form-check-label">
							<span style = "color : red">{{errors.confpassword}}</span>
						</label>
					{% endif %}
					
				</div>
			</div>	 	
		</div>
		
		<div class="row justify-content-center ">
			<div class="col-sm-8 col-md-6  col-md-offset-1 ">	
				<button type="submit" class="btn btn-dark btn-sm btn-block" >enregistrer</button>
	  		</div>
		</div>
		</br>
		<div class="row justify-content-center">
			<div class="col-sm-8 col-md-6  col-md-offset-1 ">
				<div class = "form-group">
					<a href="/adminRegister/adminRegister"><button class="btn btn-dark btn-sm btn-block" name ="QuitAuthor" >Quitter</button></a>
				</div>
			</div>
		</div>
		
	</form>
	
</div>
{% endblock %}